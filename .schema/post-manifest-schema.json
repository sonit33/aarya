{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"type": "object",
	"properties": {
		"post_file": {
			"type": "string"
		},
		"post_title": {
			"type": "string",
			"maxLength": 256
		},
		"tags": {
			"type": "array",
			"items": {
				"type": "integer"
			}
		},
		"authors": {
			"type": "array",
			"items": {
				"type": "integer"
			}
		},
		"display_date": {
			"type": "string",
			"pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}$"
		},
		"description": {
			"type": "string",
			"maxLength": 512
		},
		"tldr": {
			"type": "string",
			"maxLength": 1024
		},
		"keywords": {
			"type": "array",
			"items": {
				"type": "string"
			}
		},
		"subtitle": {
			"type": "string",
			"maxLength": 256
		},
		"image_url": {
			"type": "string",
			"maxLength": 256
		}
	},
	"required": [
		"post_file",
		"post_title",
		"tags",
		"authors",
		"display_date",
		"description",
		"tldr",
		"keywords",
		"subtitle",
		"image_url"
	]
}
