{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"type": "array",
	"items": {
		"type": "object",
		"properties": {
			"question_id": {
				"type": "integer",
				"minimum": 1000,
				"maximum": 99999
			},
			"course_id": {
				"type": "integer",
				"minimum": 1000,
				"maximum": 9999
			},
			"chapter_id": {
				"type": "integer",
				"minimum": 1000,
				"maximum": 9999
			},
			"topic_id": {
				"type": "integer",
				"minimum": 1000,
				"maximum": 9999
			},
			"que_text": {
				"type": "string",
				"minLength": 1,
				"maxLength": 2048
			},
			"que_description": {
				"type": "string",
				"minLength": 1,
				"maxLength": 2048
			},
			"choices": {
				"type": "array",
				"uniqueItems": true,
				"items": {
					"type": "object",
					"properties": {
						"id": {
							"type": "string",
							"minLength": 4,
							"maxLength": 6
						},
						"text": {
							"type": "string"
						}
					},
					"required": ["id", "text"]
				}
			},
			"answers": {
				"type": "array",
				"uniqueItems": true,
				"items": {
					"type": "object",
					"properties": {
						"id": {
							"type": "string",
							"minLength": 4,
							"maxLength": 6
						}
					},
					"required": ["id"]
				}
			},
			"ans_explanation": {
				"type": "string",
				"minLength": 1,
				"maxLength": 2048
			},
			"ans_hint": {
				"type": "string",
				"minLength": 1,
				"maxLength": 1024
			},
			"difficulty": {
				"type": "integer",
				"minimum": 1,
				"maximum": 5
			},
			"diff_reason": {
				"type": "string",
				"minLength": 1,
				"maxLength": 1024
			}
		},
		"required": [
			"question_id",
			"course_id",
			"chapter_id",
			"topic_id",
			"que_text",
			"que_description",
			"choices",
			"answers",
			"ans_explanation",
			"ans_hint",
			"difficulty",
			"diff_reason"
		]
	}
}
