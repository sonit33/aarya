{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"type": "array",
	"items": {
		"type": "object",
		"properties": {
			"author_name": {
				"type": "string",
				"maxLength": 128
			},
			"author_email": {
				"type": "string",
				"format": "email",
				"maxLength": 256
			},
			"author_bio": {
				"type": "string",
				"maxLength": 1024
			},
			"author_intro": {
				"type": "string",
				"maxLength": 256
			},
			"author_photo_url": {
				"type": "string",
				"format": "uri",
				"maxLength": 128
			}
		},
		"required": [
			"author_name",
			"author_email",
			"author_bio",
			"author_intro",
			"author_photo_url"
		],
		"additionalProperties": false
	}
}
