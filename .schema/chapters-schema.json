{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"type": "array",
	"items": {
		"type": "object",
		"properties": {
			"chapter_id": {
				"type": "integer",
				"minimum": 1000,
				"maximum": 9999
			},
			"course_id": {
				"type": "integer",
				"minimum": 1000,
				"maximum": 9999
			},
			"chapter_name": {
				"type": "string",
				"minLength": 4,
				"maxLength": 512
			},
			"chapter_description": {
				"type": "string",
				"minLength": 5,
				"maxLength": 1024
			}
		},
		"required": [
			"chapter_id",
			"course_id",
			"chapter_name",
			"chapter_description"
		]
	}
}
