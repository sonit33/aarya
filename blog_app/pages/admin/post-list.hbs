{{#> admin-main}}
    <section class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-6">
        {{#each posts}}
            <div
                class="max-w-sm rounded overflow-hidden shadow-lg bg-gray-800 text-white flex flex-col justify-between">
                <div>
                    <div class="w-full h-64 overflow-hidden">
                        <a href="/blogs/{{permalink}}">
                            <img class="object-cover w-full h-full" src="{{hero_image}}" alt="Hero image">
                        </a>
                    </div>
                    <div class="px-6 py-4">
                        <p class="text-sm gradient-text font-semibold">{{tag.name}}</p>
                        <p class="text-gray-400 text-xs mt-2">{{kicker}}</p>
                        <a href="/blogs/{{permalink}}">
                            <div class="font-bold text-xl mb-2">{{title}}</div>
                        </a>
                        <p class="text-gray-400 font-semibold text-sm">{{subtitle}}</p>
                        <div class="flex items-center mt-4 gap-2">
                            <img src="{{author.thumbnail_photo}}" alt="Author"
                                class="w-8 h-8 rounded-full inline-block">
                            <p class="text-sm text-gray-300">{{author.first_name}} {{author.last_name}}</p>
                            <p class="text-sm text-gray-500">{{publish_date}}</p>
                        </div>
                    </div>
                </div>
                <div class="px-6 mt-4 mb-4 flex items-center justify-between">
                    <a href="/admin/post/{{id}}"
                        class="bg-blue-500 hover:bg-blue-700 text-white py-2 px-4 rounded inline-block">
                        Edit â†’
                    </a>
                    {{#if featured}}
                        <a href="/post/feature/{{id}}"
                            class="bg-blue-500 hover:bg-blue-700 text-white py-2 px-4 rounded inline-block">
                            <img src="/assets/images/icons/favorite-checked.svg" alt="Feature"
                                class="w-6 h-6 inline-block">
                        </a>
                    {{else}}
                        <a href="/post/feature/{{id}}"
                            class="bg-blue-500 hover:bg-blue-700 text-white py-2 px-4 rounded inline-block">
                            <img src="/assets/images/icons/favorite.svg" alt="Featured" class="w-6 h-6 inline-block">
                        </a>
                    {{/if}}
                </div>
            </div>
        {{/each}}
    </section>
{{/admin-main}}